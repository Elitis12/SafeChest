<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/degrade_background"
    android:layout_height="match_parent"
    tools:context=".page_options">

    <TextView
        android:id="@+id/textViewOptionAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="67dp"
        android:letterSpacing="1"
        android:text="SAFE CHEST"
        android:textColor="@color/white"
        android:textScaleX="1.25"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewOptionLogo" />

    <Button
        android:id="@+id/buttonExport"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/custom_button"
        android:text="Sauvegarder la base de donnÃ©e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOptionAppName" />

    <ImageView
        android:id="@+id/imageViewOptionLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_padlock" />

    <ListView
        android:id="@+id/ListBackup"
        android:layout_width="347dp"
        android:layout_height="291dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="283dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Mes sauvegardes"
        android:textColor="@color/color_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBackupName" />

    <EditText
        android:id="@+id/editTextBackupName"

        android:layout_width="237dp"
        android:layout_height="41dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="103dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="Nom de la sauvegarde"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/color_text"
        android:textColorHint="@color/color_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonExport" />
</androidx.constraintlayout.widget.ConstraintLayout>