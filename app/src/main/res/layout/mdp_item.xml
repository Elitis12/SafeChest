<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/mdpList_icon"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_key"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="10dp">
    </ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>


    <TextView
        android:id="@+id/backupListname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lexend_deca"
        android:text="@string/mdp_default_name"
        android:textColor="@color/color_text"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/mdpList_icon"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/mdpList_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lexend_deca"
        android:inputType="textPassword"
        android:text="@string/mdp_default_mdp"
        android:textColor="@color/color_text"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/backupListname"
        tools:layout_editor_absoluteX="50dp">

    </TextView>

    <ImageButton
        android:id="@+id/imageButtonDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_trash"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/imageButtonImport"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:adjustViewBounds="true"
        android:tint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pencil" />

    <ImageButton
        android:id="@+id/imageButtonView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:tint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonImport"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_eye"
        />


</androidx.constraintlayout.widget.ConstraintLayout>